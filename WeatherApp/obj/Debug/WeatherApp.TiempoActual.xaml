<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WeatherApp.TiempoActual"  Title="Clima" Icon="unit.png">


	<ContentPage.Content>
		<ScrollView>
		<StackLayout>
			<StackLayout Orientation="Horizontal">
			<Image Source="search.png" WidthRequest="30" HeightRequest="30" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Image>
			<Entry x:Name="cityEntry"  Placeholder = "Introduce la ciudad" FontSize="30">
			</Entry>

					    <Button Text="Aceptar" WidthRequest="185" BorderWidth="1" Clicked="Handle_Clicked" >
     
            </Button>

					
			</StackLayout>
		
			<Label Text="{Binding Title}" FontSize="40" HorizontalOptions="Start" VerticalOptions="Center">
			</Label>
			<StackLayout Orientation="Horizontal" Padding="45,0,0,0" >

				
				<Label x:Name="tempLabel" Text="{Binding Temperature, StringFormat='{}{0:ยบ}'}" FontSize="20" VerticalOptions = "Center" >
				</Label>


					
				<StackLayout Orientation="Vertical" Padding="85,15,0,0">
					<Label Text="Viento" FontSize="30" HorizontalOptions="Fill">
					</Label>
					<Label x:Name="windLabel" Text="{Binding Wind, , StringFormat='{}{0:Km/h}'}"  FontSize="30" HorizontalOptions="Fill" TextColor="Red" VerticalOptions="Fill" Margin="0,-15,0,0">
					</Label>
						<Label Text="Humedad" FontSize="30" HorizontalOptions="Fill">
					</Label>
					<Label x:Name="humidityLabel" Text="{Binding Humidity}" FontSize="30" HorizontalOptions="Fill" TextColor = "Red" VerticalOptions="Fill" Margin="0,-15,0,0">
					</Label>
						<Label Text="Temp min" FontSize="30" HorizontalOptions="Fill">
					</Label>
					<Label  Text="{Binding Temp_min}" FontSize="30" HorizontalOptions="Fill" TextColor = "Red" VerticalOptions="Fill" Margin="0,-15,0,0">
					</Label>
							<Label Text="Temp max" FontSize="30" HorizontalOptions="Fill">
					</Label>
					<Label  Text="{Binding Temp_max}" FontSize="30" HorizontalOptions="Fill" TextColor = "Red" VerticalOptions="Fill" Margin="0,-15,0,0">
							</Label>
									<Label Text="Ocaso" FontSize="30" HorizontalOptions="Fill">
					</Label>
					<Label x:Name="ocasoentry"  Text="{Binding Sunset, StringFormat='{}{0:h:mm tt}'}"  FontSize="30" HorizontalOptions="Fill" TextColor = "Red" VerticalOptions="Fill" Margin="0,-15,0,0">
					</Label>
									<Label Text="Alba" FontSize="30" HorizontalOptions="Fill">
					</Label>
							<Label  Text="{Binding Sunrise, StringFormat='{}{0:h:mm tt}'}"  FontSize="30" HorizontalOptions="Fill" TextColor = "Red" VerticalOptions="Fill" Margin="0,-15,0,0">
					</Label>
						
					
				</StackLayout>
			</StackLayout>
			<StackLayout Orientation="Horizontal" Padding="5,20,0,0">

				<Label Text="Lun" FontSize="20" HorizontalOptions="Center" VerticalOptions="Fill">
				</Label>
				<Label Text="Mar" FontSize="20" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Label>
				<Label Text="Mie" FontSize="20" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Label>
				<Label Text="Jue" FontSize="20" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Label>
				<Label Text="Vie" FontSize="20" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Label>
				<Label Text="Sab" FontSize="20" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Label>
					<Label Text="Dom" FontSize="20" Margin="10,0,0,0" HorizontalOptions="Fill" VerticalOptions="Center">
				</Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" Padding="5,15,0,0">
				<Image Source="soleado.png" WidthRequest="30" HeightRequest="30">
				</Image>
				<Image Source="cloudblack.png" WidthRequest="30" HeightRequest="30" Margin="15,0,0,0" HorizontalOptions="Center" VerticalOptions="Center">
				</Image>
				<Image Source="cloudwhite.png" WidthRequest="30" HeightRequest="30" Margin="15,0,0,0" HorizontalOptions="Center" VerticalOptions="Center">
				</Image>
				<Image Source="lluvias.png" WidthRequest="30" HeightRequest="30" Margin="15,0,0,0" HorizontalOptions="Center" VerticalOptions="Center">
				</Image>
				<Image Source="cloudwhite.png" WidthRequest="30" HeightRequest="30" Margin="15,0,0,0" HorizontalOptions="Center" VerticalOptions="Center">
				</Image>
					<Image Source="cloudblack.png" WidthRequest="30" HeightRequest="30" Margin="15,0,0,0" HorizontalOptions="Center" VerticalOptions="Center">
				</Image>
					<Image Source="soleado.png" WidthRequest="30" HeightRequest="30" Margin="15,0,0,0" HorizontalOptions="Center" VerticalOptions="Center">
				</Image>
			</StackLayout>

		</StackLayout>
			</ScrollView>
	</ContentPage.Content>
</ContentPage>